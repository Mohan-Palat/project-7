<%- include ("../partials/search.ejs")%>
<div class="pure-g">
<div class="pure-u-1-2 1-box"><h1>Games</h1></div>
<% if(isAuthenticated){ %>
    <div class="pure-u-1-2 1-box"><a href="/games/new">Create a New Game</a></div><%}%>
</div>

<div class="pure-g">
<% games.forEach(game => { %>
    <div class="pure-u-1 pure-u-sm-1-4">
    
    <a href="/games/<%=game._id%>"><img class="pure-img" src="<%=game.image%>">
    <%=game.name%></a></div>

<%})%>
    </div>


