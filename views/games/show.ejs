  <%} else {%>
<button type="button" name="button"><a href="/games/<%=game._id%>/edit">Edit</a></button>
<form action="/games/<%=game._id%>?_method=DELETE" method="POST"><input type="submit" value="DELETE" /></form>
<%}%>