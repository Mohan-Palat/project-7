<body><h1>Edit Console</h1>
    <%if(!isAuthenticated){%>
        <h2>You do not have the ability to edit a console. Login first</h2>
      <%} else {%>
    <form action="/consoles/<%= consoles._id%>?_method=PUT" method="POST"> <!--Method is the http verb that we are sending-->
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= consoles.name %>" width="100"/><br/>
        
        <label for="image">Image</label>
        <input type="text" name="image" id="image" value="<%=consoles.image%>" size="100" /><br/>

        <label for="comments">Comments</label>
        <textarea id="comments" name="comments" rows="4" cols="50"><%=consoles.comments%></textarea> <br />
        
        <% games.forEach(game => { %>
          <label for="<%= game.name%>">
          <input type="checkbox" id="<%=game.id %>" name="games" value="<%=game.id%>" 

          <%consoles.games.forEach(cgame =>{
            if(cgame.id===game.id){ %>
            checked
          <%}})%>
          />
          <%= game.name %>
          </label><br />
        <%})%>

        <input type="submit" value="Update Console Info">
      </form>
<%}%>
     </body>