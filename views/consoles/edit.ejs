<body><h1>Edit Console</h1>
    <%if(!isAuthenticated){%>
        <h2>You do not have the ability to edit a console. Login first</h2>
      <%} else {%>
    <form action="/consoles/<%= console._id%>?_method=PUT" method="POST"> <!--Method is the http verb that we are sending-->
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= console.name %>" size="75"/><br/>
        
        <label for="image">Image</label>
        <input type="text" name="image" id="image" value="<%=console.image%>" size="75" /><br/>
        
        <% games.forEach(game => { %>
          <label for="<%= game.name%>">
          <input type="checkbox" id="<%=console.games.id %>" name="games" value="<%=console.games.id%>"
          <% if(game.id === console.games.id){ %>
          checked
        <%}%>/>
          <%= game.name %>
          </label><br />
        <%})%>
        
        <input type="submit" value="Update Console Info">
      </form>
<%}%>
     </body>