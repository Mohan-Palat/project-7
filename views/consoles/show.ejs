<%if(!isAuthenticated){%>
  <%- include ("../partials/search.ejs")%>
<%} else {}%>
<div class="pure-g">
  <div class="pure-u-1 pure-u-md-3-4">
<h1><%=console.name%></h1></div>

<%if(!isAuthenticated){%>
    
  <%} else {%>
    
    <div class="pure-u-1 pure-md-1-8"><a class="pure-button" href="/consoles/<%=console._id%>/edit">Edit</a></div>
    <div class="pure-u-1 pure-md-1-8"><form action="/consoles/<%=console._id%>?_method=DELETE" method="POST"><input type="submit" value="DELETE" /></form></div>
<%}%>
  </div>

<img src="<%=console.image%>" class="pure-u-lg-1" max-width="720" max-height="480" align="center"><br>

<p><%=console.comments%></p>
<h3>Games associated with console</h3>

  <div class="pure-g">
    
    <% console.games.forEach(game =>{%>
      <%games.forEach(match =>{
        if(match.id === game.id){%>
          <div class="pure-u-1 pure-u-md-1-4">
   <a href="/games/<%=match.id%>"><img class="pure-img" src="<%=match.image%>"><%=game.name%></a></div>
   <%}})%>
 <%})%>
</div>

